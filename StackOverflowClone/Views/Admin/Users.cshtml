@model IEnumerable<StackOverflowClone.Models.Client>
@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Email</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Username</td>
                    <td>
                        @Html.ActionLink("Delete", "DeleteUser", "Admin", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                    </td>
                </tr>
            }
    </tbody>
</table>